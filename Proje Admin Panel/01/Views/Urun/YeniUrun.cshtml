
@model _01.Models.Entity.TBLURUNLER

@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>YeniUrun</h2>

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" name="URUNAD" class="form-control" />
    </div>
    <div>
        <label>Ürün Markası</label>
        <input type="text" name="MARKA" class="form-control" />
    </div>
    <div>
        <label>Kategori</label>
        @*@Html.DropDownListFor(m => m.TBLKATEGOTILER., (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })*@
        @Html.DropDownListFor(m => m.URUNKATEGORİ, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Ürün Fiyatı</label>
        <input type="text" name="FIYAT" class="form-control" />
    </div>
    <div>
        <label>Stok Sayısı</label>
        <input type="text" name="STOK" class="form-control" />
    </div>
    <div style="margin-top:15px"><BUTTON class="btn btn-info">Ürün Ekle</BUTTON></div>

</form>

